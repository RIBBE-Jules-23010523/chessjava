<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.echecsae.HelloController">
    <padding>
        <Insets bottom="20.0" left="10.0" right="20.0" top="10.0"/>
    </padding>
    <top>
        <VBox>
            <HBox style="-fx-padding: 10 10 10 0" spacing="10">
                <ImageView fitHeight="75" fitWidth="75">
                    <Image fx:id="coach" url="@./piece/coach.png" />
                </ImageView>
                <children>
                    <Label fx:id="joueur2" text="Joueur 2"/>
                </children>
            </HBox>
            <ImageView fitWidth="500" fitHeight="500">
                <Image fx:id="plateau" url="@./piece/board.png"/>
            </ImageView>
            <HBox style="-fx-padding: 10 10 10 0" spacing="10">
                <ImageView fitHeight="75" fitWidth="75">
                    <Image fx:id="manuel" url="@./piece/manuel.png" />
                </ImageView>
                <children>
                    <Label fx:id="joueur1" text="Joueur 1" />
                </children>
                <Region HBox.hgrow="ALWAYS"/>

            </HBox>
        </VBox>
    </top>
</BorderPane>